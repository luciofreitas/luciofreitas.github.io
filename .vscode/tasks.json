{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-vite-dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*ready.*$",
          "endsPattern": "^.*Local:.*http://localhost:5174.*$"
        }
      }
    }
  ]
}
