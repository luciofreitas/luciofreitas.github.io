{
  "name": "pecas-automotivas-compativeis",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://luciofreitas.github.io",
  "description": "Web UI (React + Vite) para catálogo de peças automotivas; use `npm run dev:chrome` para abrir o site automaticamente no Google Chrome sem alterar o navegador padrão do sistema.",
  "scripts": {
    "dev": "vite --host --port 5174",
    "dev:chrome": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && .\\open-chrome.bat\"",
    "dev:backend": "npm --prefix backend run start",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "build": "vite build",
    "ci-build": "NPM_CONFIG_PRODUCTION=false npm ci && npm run build",
    "prebuild": "node scripts/generate-components-index.js && node scripts/generate-parts-meta.js",
    "preview": "vite preview",
    "postbuild": "node scripts/copy-static.js",
    "generate-barrel": "node scripts/generate-components-index.js",
    "deploy": "npm run build && node scripts/deploy-to-master.js",
    "sync-parts": "node scripts/sync-parts-from-supabase.js"
  },
  "engines": {
    "node": ">=22.16.0 <23",
    "npm": ">=10.9.3"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "@supabase/supabase-js": "^2.75.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "daisyui": "^5.0.50",
    "firebase": "^12.4.0",
    "jimp": "^1.6.0",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "potrace": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.1",
    "react-select": "^5.10.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.17",
    "concurrently": "^9.2.1",
    "dotenv": "^16.6.1",
    "gh-pages": "^6.3.0",
    "open-cli": "^8.0.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "puppeteer": "^24.20.0",
    "tailwindcss": "^4.1.12",
    "terser": "^5.44.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
